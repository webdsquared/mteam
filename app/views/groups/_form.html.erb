<%= form_for @group do |f| %>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :departure %><br />
    <%= f.date_select :departure %>
  </p>
  <p>
    <%= f.label :arrival %><br />
    <%= f.date_select :arrival %>
  </p>
  <p>
    <%= f.label :destination %><br />
    <%= f.text_field :destination %>
  </p>
  <p>
    <%= f.label :trip_length %><br />
    <%= f.text_field :trip_length %>
  </p>
  <p>
    <%= f.label :trip_cost %>
    <%= f.text_field :trip_cost %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p><%= f.submit %></p>
<% end %>
